{
  "name": "ma-auto-website",
  "version": "1.0.0",
  "description": "M&A Auto - Sito concessionario professionale",
  "main": "index.html",
  "scripts": {
    "dev": "vercel dev",
    "build": "npm run optimize",
    "deploy": "vercel --prod",
    "optimize": "npm run minify-css && npm run optimize-images",
    "minify-css": "cleancss -o dist/styles.min.css styles.css",
    "optimize-images": "imagemin images/* --out-dir=dist/images --plugin=imagemin-webp --plugin=imagemin-mozjpeg",
    "test": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html"
  },
  "dependencies": {
    "xmldom": "^0.6.0"
  },
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "imagemin": "^8.0.1",
    "imagemin-webp": "^7.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "lighthouse": "^10.4.0"
  },
  "keywords": [
    "concessionario",
    "auto usate",
    "vercel",
    "pwa",
    "responsive"
  ],
  "author": "M&A Auto",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tuousername/ma-auto-website.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "vercel": {
    "functions": {
      "api/cars.js": {
        "maxDuration": 30
      }
    },
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          {
            "key": "X-Content-Type-Options",
            "value": "nosniff"
          },
          {
            "key": "X-Frame-Options",
            "value": "DENY"
          },
          {
            "key": "X-XSS-Protection",
            "value": "1; mode=block"
          }
        ]
      },
      {
        "source": "/api/(.*)",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, PUT, DELETE, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "X-Requested-With, Content-Type, Authorization"
          }
        ]
      }
    ]
  }
}